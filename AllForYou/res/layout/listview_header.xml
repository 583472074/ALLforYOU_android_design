<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/linear_selector"
    android:clickable="true"
    android:orientation="horizontal" >

    <TextView
        android:layout_width="40dip"
        android:layout_height="wrap_content" />

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:id="@+id/title_pic"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        bootstrap:bct_image="@drawable/title_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="九妮"
            android:textColor="#FFF0F0F0"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/title_likes"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_gravity="left"
            android:layout_marginLeft="17dip"
            android:layout_weight="1"
            android:gravity="center"
            android:text="&lt;1084387950@qq.com>"
            android:textColor="#FFF9F9F0"
            android:textSize="14dip"
            android:textStyle="italic" />
    </LinearLayout>

    <TextView
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

</LinearLayout>